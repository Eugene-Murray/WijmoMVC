        //            allowPaging: true,
        //            columns: [
        //            {},
        //            { dataType: "currency" }
        //            ]
        //        });
        $(".productgrid").wijgrid({
            allowSorting: true,
            allowPaging: true,
            columns: [
                {},
                { dataType: "currency" }
            ]
        });
    });
</script>